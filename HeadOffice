

-- Основная таблица приема данных
CREATE TABLE HO_W_OPERATIONS (
ID                  BIGINT IDENTITY (1,1) PRIMARY KEY,                              -- Уникальный код операции в хранилище
ID_POINT            BIGINT          NOT NULL,                                       -- Ид аптеки (Торговой точки)
ID_DRUG             BIGINT          NOT NULL,                                       -- Ид медикамента 
ID_OPER             BIGINT          NOT NULL,                                       -- Ид операции в торговой точке
ID_SUPP             BIGINT          NOT NULL,                                       -- Ид поставщика

 
QNTY_OPER           INT             NOT NULL,                                       -- Количество операций в аптеке

PRICE_OPT           DOUBLE(18,2)    NOT NULL   DEFAULT(0),                          -- Оптовая цена
PRICE_FACTORY       DOUBLE(18,2)    NOT NULL   DEFAULT(0),                          -- Оптовая - отпускная цена 
PRICE_BUY           DOUBLE(18,2)    NOT NULL   DEFAULT(0),                          -- Закупочная цена без НДС
COEF_VAT            DOUBLE(18,2)    NOT NULL   DEFAULT(0)                           -- Кофициент НДС 


     Название	Тип	Описание
ID	BIGINT	Уникальный идентификатор операции
QUANT	DOUBLE	Количество операции
QUANT_STOCK	DOUBLE	Количество остатка после операции
NO_USE_STOCK	SMALLINT	Признак влияет ли операция на остаток
COEF_VAT	DOUBLE	Коэффициент НДС
PRICE_FACTORY	DOUBLE	Оптово-отпускная цена
PRICE_BUY	DOUBLE	Закупочная цена без НДС
PRICE_BUY_VAT	DOUBLE	Закупочная цена НДС
PRICE_BUY_SUM	DOUBLE	Закупочная цена с НДС
PRICE_SELL	DOUBLE	Отпускная цена без НДС
PRICE_SELL_VAT	DOUBLE	Отпускная цена НДС
PRICE_SELL_SUM	DOUBLE	Отпускная цена с НДС
PRICE_SRC	DOUBLE	Розничная цена без НДС
PRICE_SRC_VAT	DOUBLE	Розничная цена НДС
PRICE_SRC_SUM	DOUBLE	Розничная цена с НДС
ID_DOC	BIGINT	Уникальный идентификатор  документа операции
ID_BUSINESS	BIGINT	Ссылка на юр. лицо операции
ID_STRUCTURE	BIGINT	Ссылка на ТТ операции
IS_CLOSED	SMALLINT	Признак проведения документа
ID_DOC_TYPE	BIGINT	Ссылка на тип документа
ID_VAT	BIGINT	Ссылка на тип НДС документа
NO_VAT	SMALLINT	Признак разделения документа по типу НДС (1 – смешанный, 0 – определен)
ID_CONTRACTOR	BIGINT	Ссылка на контрагента операции
DOC_NAME	VARCHAR(255)	Внутреннее название документа
DOC_DATE_TIME	TIMESTAMP	Внутренняя дата документа
TAX_NAME	VARCHAR(255)	Номер налоговой накладной
TAX_DATE	DATE	Дата налоговой накладной
ID_PARSEL	BIGINT	Уникальный идентификатор партии (локальный)
ID_PARSEL_PARENT	BIGINT	Уникальный идентификатор партии (глобальный)
ID_DRUG	BIGINT	Ссылка на товар
ID_DOC_BUY	BIGINT	Ссылка на документ прихода партии
ID_STRUCTURE_BUY	BIGINT	Ссылка на структуру прихода партии
DOC_NAME_BUY	VARCHAR(255)	Название документа прихода партии
DOC_DATE_TIME_BUY	TIMESTAMP	Дата документа прихода партии
ID_SUPPLIER_BUY	BIGINT	Ссылка на поставщика партии
DOC_NAME_SUPP_BUY	VARCHAR(255)	Имя документа поставщика партии
DOC_DATE_SUPP_BUY	DATE	Дата документа поставщика партии
DATE_PAY_BUY	DATE	Дата оплаты по документу партии
CODE	VARCHAR(255)	Отображаемый идентификатор партии
BARCODE	VARCHAR(255)	Заводской штрих код партии
SERIES	VARCHAR(255)	Серия партии
DATE_EXPIRE	DATE	Срок годности партии
CERT_NAME	VARCHAR(255)	Имя сертификата партии
CERT_DATE	DATE	Дата сертификата партии
NON_FISC	SMALLINT	Признак серого товара (не фискальный)
CARD_NUMBER	VARCHAR(255)	Номер дисконтной карты
ID_SOURCE_RECEIPT_ITEM	BIGINT	Ссылка на родительскую операцию для страховых и больниц.
